#!/usr/bin/env sh

# Exit on any error
set -e

echo "ğŸ” Running pre-commit checks for all projects..."

# Find all projects with package.json files
for project_dir in */; do
  if [ -f "${project_dir}package.json" ]; then
    echo "ğŸ“ Checking project: ${project_dir%/}"
    cd "${project_dir}"
    
    # Check if this is a TypeScript project
    if [ -f "tsconfig.json" ]; then
      echo "  ğŸ” Running TypeScript type check..."
      npm run type-check
    fi
    
    # Check if lint-staged is configured
    if grep -q "lint-staged" package.json; then
      echo "  ğŸ” Running ESLint on staged files..."
      npx lint-staged
    else
      echo "  âš ï¸  No lint-staged configuration found, skipping..."
    fi
    
    cd ..
  fi
done

# If we get here, all checks passed
echo "âœ… All pre-commit checks passed!"